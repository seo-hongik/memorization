//패키지이름이 kakaoGame입니다.
package kakaoGame;

import java.util.Scanner;

//playGameEngine 클래스를 정의합니다.
public class PlayGameEngine {

	
	//필드 (멤버변수)를 정의합니다.
	private Character character;    //캐릭터
	private int menu;			    //메뉴
	private boolean exit;		    //종료
	
	
	
	//매개 변수가 있는 생성자를 정의합니다. 
	public PlayGameEngine(Character character) {
		
		this.character=character;
	}
	
	//메뉴를 출력하는 메서드를 정의합니다. 
	
	public void printMenu(Scanner sc) {
		System.out.println("1.밥먹기 2.잠재우기 3.놀아주기 4.운동하기 5.종료");
		menu=sc.nextInt();
		//The method play() is undefined for the type PlayGameEngine
		//play()메서드 호출합니다.
		play();
	}
	//메뉴 선택에 따라 Character의 해당 매서드를 호출해주는 play()메서드를 정의합니다. 
	public void play() {
		// TODO Auto-generated method stub
		switch(menu) {
		case 1://1.밥먹이기
			character.eat();
			
		case 2://2.잠재우기
			character.sleep();
			
			
		case 3://3.놀아주기 
			character.play();
			

		case 4://4.운동하기
			character.train();
				
		case 5://5.종료
			exit=true;
			
		
		}
		//캐릭터의 현재 정보를 출력하기 위해 printInfo()메서드를 호출합니다.
		character.printInfo();
	}

	//필드(멤버 변수)를 접근하기 위하여 get(),set()메서드를 정의합니다.
	
	public Character getCharacter() {
		return character;
	}

	public void setCharacter(Character character) {
		this.character = character;
	}

	public int getMenu() {
		return menu;
	}

	public void setMenu(int menu) {
		this.menu = menu;
	}

	public boolean isExit() {
		return exit;
	}

	public void setExit(boolean exit) {
		this.exit = exit;
	}
	
}
