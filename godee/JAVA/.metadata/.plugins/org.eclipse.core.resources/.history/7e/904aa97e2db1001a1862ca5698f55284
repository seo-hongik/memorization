//패키지 이름이 staticTest입니다.
package staticTest;


//Student 클래스를 정의합니다.
public class Student {
	//필드(멤버 변수)를 정의합니다.
	//static 변수는 인스턴스 생성과 상관없이 먼저 생성됩니다.
	
	public static int serialNum=2000;	//학번을 차례대로 부여하기 위함
	public int studentID;				//학생의 ID
	public String studentName; 			//학생의 이름
	public String major;				//전공
	public int grade; 					//학번
	
	//생성자
	
	public Student() {
		
		serialNum++;
		studentID=serialNum;
		
	}
		
	

	//학생의 이름을 가져오는 메서드를 정의합니다.
	public String getStudentName() {
		
		
		return studentName;
		
	}
	
	

	//학생의 이름을 부여하는 메서드를 정의합니다.
	public void setStudentName(String name) {
		
		studentName=name;
		
	}
	
	
	
	
	/*public void setsrialNum(int...serialnum) {
		
	
		
	}*/
	
	
}
