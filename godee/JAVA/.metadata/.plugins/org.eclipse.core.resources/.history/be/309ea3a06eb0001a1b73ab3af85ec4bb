//패키지이름이 dailyTest입니다.
package dailyTest;



//클래스 이름이 MyDate입니다.
public class MyDate {

	//field(멤버변수)를 정의합니다.
	
	//public을 private 변경합니다.
	/*
	public int day; 	//일
	
	public int month; 	//월
	
	public int year;	//년도
	*/
	
	private int day; 	//일
	
	private int month; 	//월
	
	private int year;	//년도
	
	private boolean isVaild; //유효성
	
	//일 받기
	public int getDay() {
		
		return day;
	}
	//월받기
	public int getMonth() {

		return month;
	}
	//년도 받기
	public int getYear() {

		return year;
	}
	

	MyDate(){
		
		
		
		
	}
	
	
	MyDate(int day, int month, int year){

		this.day=day;
		this.month=month;
		this.year=year;
		


	}
	

	//해당월의 일을 지정하는 메서드
	public void setDay(int day) {
		//2월은 1~29일까지 존재	
		
		if(month==2) {
			
			if(day<1||day>29) {
				System.out.println("오류 입니다.");
				
			}else{
				this.day=day;
			}
		}
	}
	
	//해당월을 지정하는 메서드
		public void setMonth(int month) {
					
			this.month=month;
			}

		//해당년도을 지정하는 메서드
		public void setYear(int year) {
					
			this.year=year;
			}

		
		public boolean isVaild() {
			if(year==2020) {
				if((month==1||month==3||month==5||month==7||month==8||month==10||month==12)&&(day>0&&day<=31)) {

					System.out.println("유효합니다.");
				}else if((month==2||month==4||month==6||month==9||month==11)&&(day>0&&day<=30)) {
					System.out.println("유효하지 않습니다.");
				}			
				


			}
			
			return isVaild;
		}


	
}
