
public class Ex18 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int sum=0;
		int temp=0;
		String[] title={"번호","국어","영어","수학","총점","평균"};
		String[] name= {"1","2","3","4","5"};
		
		int[][] score= {
			{100, 100,100}
			,{20,20,20}
			,{30,30,30}
			,{40,40,40}
			,{50,50,50}			
		};
		int arr[]=new int[3];
		
		System.out.println("성적표\n");
		for(String t:title) {
			System.out.print(t+"\t");
			
		}
		System.out.println();
		
		for(int i=0; i<44; i++) {
			System.out.print("=");
		}
		
		System.out.println();
		
	for(int i=0; i<score.length; i++) {//행부분
		System.out.println(name[i]+"\t");
		for(int j=0; j<score[i].length; j++ ) {
			System.out.print(score[i][j]+"\t");
			
			arr[j]+=score[i][j];
		}
		
	}
	
	}

}
