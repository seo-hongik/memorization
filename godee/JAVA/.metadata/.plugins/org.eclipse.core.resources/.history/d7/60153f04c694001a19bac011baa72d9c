class TV{
	//필드(속성)
	String color;
	boolean power;
	int channel;
	
	
	//메서드(기능)
	void power() {
		power=!power;//매개변수가 있으면 this 없으면 안씀
	}
	
	void chanelUp() {
		channel++;
		
	}
	void chanelDown() {
		channel--;
	}
	
	
}



public class Tvtest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		TV tv1=new TV();
		System.out.println(tv1.power);
		
		tv1.power();
		System.out.println(tv1.power);
		
		System.out.println(tv1.channel);
		
		tv1.channel=7;

	}

}
