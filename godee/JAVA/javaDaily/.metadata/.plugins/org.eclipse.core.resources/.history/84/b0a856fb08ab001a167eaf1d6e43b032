import java.util.Scanner;

public class Ex02 {
	
	
	public static void main(String[] args) {
		
	Scanner sc=new Scanner(System.in);
	
	
	int pure=sc.nextInt();
		int j=pure;
		if(pure>0) {
			
			
			System.out.println(j*--pure);
			
		while(true) {
			
			if(pure==0) {
				
				break;
				
			}
			
			System.out.print(pure+"*");
			--pure;
				
		}
		
		}
	
	}
	}

