import java.util.Scanner;

class Student {
	long stuNum;
	String stuName;
	int subjectNum; // 과목 수를 입력합니다.
	Subject[] stuSubject;
	int sum;
	double avg;
}

class Subject {
	String subjectName;
	int score;
}

// 들을 과목수를 차례대로 쓰면 그 length의 길이 값을 배열의 행의 숫자로 지정해 주면, 듣는 과목의 수와 순서를 맞출수 있음


public class Ex24 {

	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 	제목 : 학사관리 시스템(3)
		 	처리조건
		 	1) 학번은 숫자로 이루어져있으며, 6자리로 생성합니다.
		 	2) 이름은 최대 10글자로 제한합니다.(숫자나 특수문자 안됨)
		 	3) 학생수는 최대 10명까지 입력합니다.
		 	4) 과목은 선택할 수 있습니다.(국어, 영어, 수학)
		 	5) 출력화면은 다음과 같습니다.
		 	
		 	1. 전체 성적표
		 	-----------------------------------
		 	학번  이름  국어  영어  수학  총점  평균  석차
		 	
		 	2. 학생별 성적표
		 	-----------------------------------
		 	학번  이름  국어  영어  수학  총점  평균  석차
		 	
		 	3. 과목별 성적표(1.국어, 2.영어, 3.수학)
		 	-----------------------------------
			학번  이름  국어  ~		 	
		 */
		
		Scanner sc = new Scanner(System.in);
		System.out.print("학생 수를 입력하세요(최대 10까지 입력 가능합니다) : ");
		int studentNum = sc.nextInt();
		if(!(studentNum >0 && studentNum <=100)) {
			System.out.println("알맞지 않은 학생 수가 입력되었습니다. 시스템을 다시 시작해주세요.");
			studentNum = 0;
			sc.close();
		}
		
		// 입력된 수만큼 학생의 배열을 생성해줍니다.
		Student[] students = new Student[studentNum];
		
		for(int i=0; i<students.length; i++) {
			students[i] = new Student();
		}
		for(int i=0; i<students.length; i++) {
			System.out.print(i+1+"번째 학생번호를 입력하세요(6자리) : ");
			students[i].stuNum = sc.nextInt();
			sc.nextLine();
			System.out.print(i+1+"번째 학생이름을 입력하세요(10글자이내) : ");
			students[i].stuName = sc.nextLine();
			System.out.print(i+1+"번째 학생의 과목의 수를 입력하세요(3과목이내) : ");
			students[i].subjectNum = sc.nextInt();
			students[i].stuSubject = new Subject[students[i].subjectNum]; //받은 과목수 변수의 값 만큼 과목을 생성합니다.
			for(int j=0; j<students[i].subjectNum; j++) { //과목수 만큼 반복문을 실행합니다.
				students[i].stuSubject[j] = new Subject();
				sc.nextLine();
				System.out.print(j+1+"번째 과목명을 입력하세요(ex)language, english, math) : ");
				students[i].stuSubject[j].subjectName = sc.nextLine();
				System.out.print(j+1+"번째 과목의 점수를 입력하세요 : ");
				students[i].stuSubject[j].score = sc.nextInt();
				students[i].sum += students[i].stuSubject[j].score;
			} students[i].avg = students[i].sum/students[i].subjectNum;
		} 
		for(int i=0;i<studentNum;i++) {
			System.out.println("=========================학생별 성적표=======================");
			System.out.println(i+1+"번째 학생의 번호 : " + students[i].stuNum);
			System.out.println(i+1+"번째 학생의 이름 : " + students[i].stuName);
			for(int j=0; j<students[i].stuSubject.length;j++) {
				System.out.println(i+1+"번째 학생의 " +(j+1)+ "번째 과목명 :" + students[i].stuSubject[j].subjectName);
				System.out.println(i+1+"번째 학생의 " +(j+1)+ "번째 과목 점수 :" + students[i].stuSubject[j].score);
			}
			System.out.println((i+1)+"번째 학생의 총점 : " + students[i].sum);
			System.out.println((i+1)+"번째 학생의 평균 : " + students[i].avg);
		}
		
		 
	}

}
