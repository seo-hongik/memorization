import java.util.Scanner;

public class JavaExam {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 가위바위보 게임 만들기
		
		//입력값을 받기 위해 스캐너객체를 생성합니다.
		Scanner sc = new Scanner(System.in);
		// 유저가 승리시 포인트가 올라갑니다.
		int victory=0;
		// 비겼을 시 숫자가 1증가합니다.
		int draw=0;	
		// 졌을시 숫자가 1증가합니다.
		int lose=0;
		// 무효시 숫자가 1증가합니다.
		int cancel =0;
		// 컴퓨터의 상태를 나타내는 변수값을 가집니다. (1-> 가위, 2-> 바위, 3->보)
		double comHand=0;
		// 유저의 상태를 나타내는 변수값을 가집니다. (1-> 가위, 2-> 바위, 3->보)
		String user="";
		// 처음에 입력한 코인 값을 가집니다.
		String coin = "";

		System.out.print("코인을 집어 넣으세요(최대10) : ");
		coin = sc.nextLine();
		
		//1~10까지의 코인이 입력된다면 게임을 시작하게 해주는 if문입니다.
		if (coin.equals("1")||coin.equals("2")||coin.equals("3")||coin.equals("4")||coin.equals("5")
			||coin.equals("6")||coin.equals("7") || coin.equals("8") || coin.equals("9")|| coin.equals("10")) {
			int newcoin = Integer.parseInt(coin); // 게임 속으로 들어 왔다면 입력된 문자값을 숫자로 변환시켜  줍니다.
			System.out.println("=================GAME START=================\n어떤걸 내시겠습니까? 가위[1] 바위[2] 보[3]");
			for(int i = 0;i<newcoin;i++) {
				user = sc.nextLine();
//				comHand = Math.ceil((Math.random()*3)) 컴퓨터가 1~3의 숫자를 가지게 해줍니다.;
				comHand = (int) Math.ceil((Math.random()*3));
				// 유저가 1~3으로 알맞은 입력 값을 냈을 경우를 정리합니다.
				if(user.equals("1")||user.equals("2")||user.equals("3")) {
					int userHand = Integer.parseInt(user);
					// 유저가 가위(1)일때 입니다.
					if(userHand == 1 && comHand == 1) {
						System.out.println("[유저] 가위 =VS= 가위 [컴퓨터]\n[무승부]\n=========================================");
						draw +=1;
					} else if (userHand == 1 && comHand == 2 ) {
						System.out.println("[유저] 가위 =VS= 바위 [컴퓨터]\n[패배]\n=========================================");
						lose +=1;
					} else if (userHand == 1 && comHand == 3) {
						System.out.println("[유저] 가위 =VS= 보 [컴퓨터]\n[승리]\n=========================================");
						victory +=1;
					// 유저가 바위(2)일때 입니다.
					} else if (userHand == 2 && comHand == 1) {
						System.out.println("[유저] 바위 =VS= 가위 [컴퓨터]\n[승리]\n=========================================");
						victory +=1;
					} else if (userHand == 2 && comHand == 2) {
						System.out.println("[유저] 바위 =VS= 바위 [컴퓨터]\n[무승부]\n=========================================");
						draw +=1;
					} else if (userHand == 2 && comHand == 3) {
						System.out.println("[유저] 바위 =VS= 보 [컴퓨터]\n[패배]\n=========================================");
						lose +=1;
					// 유저가 보(3)일때 입니다.
					} else if (userHand == 3 && comHand == 1) {
						System.out.println("[유저] 보 =VS= 가위 [컴퓨터]\n[패배]\n=========================================");
						lose +=1;
					} else if (userHand == 3 && comHand == 2) {
						System.out.println("[유저] 보 =VS= 바위 [컴퓨터]\n[승리]\n=========================================");
						victory += 1;
					} else if (userHand == 3 && comHand == 3) {
						System.out.println("[유저] 보 =VS= 보 [컴퓨터]\n[무승부]\n=========================================");
						draw +=1;
					} 
				} else { // 유저가 1~3이 아닌 다른 입력값을 입력할 경우 아래의 로직이 실시 됩니다.
						if (comHand == 1) {
							System.out.println("[유저] 손가락오류 =VS= 가위 [컴퓨터]\n값을 잘못 입력 하였습니다.\n=========================================");
							cancel +=1;
						} else if (comHand == 2) {
							System.out.println("[유저] 손가락오류 =VS= 바위 [컴퓨터]\n값을 잘못 입력 하였습니다.\n=========================================");
							cancel +=1;
						} else if (comHand == 3) {
							System.out.println("[유저] 손가락오류 =VS= 보 [컴퓨터]\n값을 잘못 입력 하였습니다.\n=========================================");
							cancel +=1;
						}
				  }
			}
			// 가위바위보 게임이 끝나고 결과를 나타내는 계산식을 나타냅니다.
			System.out.println("[결과] 게임 횟수 : " + newcoin);
			System.out.println("[전적] win : " + victory+"번, lose : "+lose+"번, draw : "+draw+"번, 무효 : "+cancel+"번");
			System.out.println("[승률] "+((double)victory/(double)newcoin)*100+"%");
			sc.close();
			} else if (coin.charAt(0) == '-') { //음수 값을 받았을 경우 실시되는 로직입니다.
			System.out.println("음수는 사용할수 없습니다.\n다시 실행 해주세요.\n=================GAME OVER=================");
			} else if (coin.equals("0")) { //0을 받았을 경우 실시되는 로직입니다.
			System.out.println("0은 사용할 수 없습니다.\n다시 실행 해주세요.\n=================GAME OVER=================");
			} else { //0, 음수값 이외에 값(문자,혹은 10을 초과 한 값이 들어 올 경우 분류해서 나타내 줍니다.
				int checking = 0; //문자가 들어올 경우 숫자를 증가시켜 for문이 끝나고 나서 값이 1 이상이면 "문자를 포함할 수 없습니다"라는 문구를 띄워줍니다.
				for(int i = 0; i< coin.length();i++) {
					if(coin.charAt(i) < 48 || coin.charAt(i) > 57) {
						checking += 1; //문자를 포함하고 있는 지 확인하는 변수입니다.
					}
				}
				// checking 변수를 이용하여 문자가 포함되어있는지 확인하고 if문을 실행시킵니다.
				if(checking >= 1) {
					System.out.println("문자를 포함할 수 없습니다.\n다시 실행 해주세요.\n=================GAME OVER=================");
				} else {
					System.out.println("10회 이상 사용할 수 없습니다.\n다시 실행 해주세요.\n=================GAME OVER=================");
				}
			}			
	}

}
	
	
